@model WebAppRecepti.Models.Recept

<h1>Uredi recept</h1>
<h4>Ažuriraj recept @Model.Naziv</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VrijemePripreme" class="control-label"></label>
                <input asp-for="VrijemePripreme" class="form-control" />
                <span asp-validation-for="VrijemePripreme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrojOsoba" class="control-label"></label>
                <input asp-for="BrojOsoba" class="form-control" />
                <span asp-validation-for="BrojOsoba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sastojci" class="control-label"></label>
                <input asp-for="Sastojci" class="form-control" />
                <span asp-validation-for="Sastojci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priprema" class="control-label"></label>
                <input asp-for="Priprema" class="form-control" />
                <span asp-validation-for="Priprema" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlikaUrl" class="control-label"></label>
                <input asp-for="SlikaUrl" class="form-control" />
                <span asp-validation-for="SlikaUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.KategorijaId"></select>
                <span asp-validation-for="KategorijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Natrag na popis recepata</a>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }

}

