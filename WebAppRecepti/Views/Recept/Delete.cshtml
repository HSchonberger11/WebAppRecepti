@model WebAppRecepti.Models.Recept

<h1>Obriši recept</h1>
<h2> Brisanje recepta: @Model.Naziv</h2>
<h4>Jeste li sigurni u brisanje iznad navedenog recepta?</h4>
<div>
    <h4>Recept</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VrijemePripreme)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VrijemePripreme)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrojOsoba)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrojOsoba)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sastojci)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sastojci)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Priprema)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priprema)
        </dd class="col-sm-10"> 
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kategorija)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kategorija.Naziv)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlikaUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.SlikaUrl)" alt="@Html.DisplayFor(model => model.Naziv)" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index">Natrag na popis recepata</a>
    </form>
</div>

